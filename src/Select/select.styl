select-item-width = 120px
select-fontsize = 20px
select-icon-width = 20px
.detail
    padding 5px
    display inline-flex
    flex-direction row
    width select-item-width
    transition all 0.5s ease
    ul,li
        display inline-flex
        list-style none
    ul
        flex-direction column
        width 100%
        display none
        margin 0
        padding 0
    li
        cursor pointer
        width 100%
        border-bottom 1px solid #afabab
        padding-right select-icon-width
        div
            display flex
            flex 1
    span
        text-align center
        flex 1
        font-size select-fontsize
.select-wrap
    display flex
    flex 1
    flex-direction column
.select-box
    display inline-flex
    box-sizing border-box
    flex-direction row
    padding 0 0 0 5px
    justify-content space-between
    border-bottom 1px solid #afabab
    cursor pointer
    span
        font-weight bold
        align-self center
.select-icons
    width select-icon-width
    display inline-flex
    flex-direction column
    cursor default
    svg
        cursor pointer
.select-items
    &:hover
        font-weight bold
        background-color rgb(219,219,219)
    div
        padding 7px 5px
        display inline-flex
.check.select-items
    background-color rgb(219,219,219)
.select-data
    font-size select-fontsize
    padding 10px 20px
    flex 5